@inject Client.Services.APIService  APIService;

<h3>Projects</h3>

@if (projects == null)
{
    <p>Loading...</p>
}
else if (!projects.Any())
{
    <p>No projects found.</p>
}
else
{
    <ul>
        @foreach (var project in projects)
        {
            <li>
                <strong>@project.Name</strong> - @project.Description
                <br />
                <small>Created At: @project.CreatedAt.ToString("dd-MM-yyyy")</small>
                <ul>
                    @foreach (var task in project.Tasks)
                    {
                        <li>@task.Title (@task.Status)</li>
                    }
                </ul>
            </li>
        }
    </ul>
}

@code {
    private List<Client.Models.Project>? projects;

    protected override async Task OnInitializedAsync()
    {
        projects = await APIService.GetAsync<List<Client.Models.Project>>("Projects");
    }
}